<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/DialogNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:text="*Once the plan time is set, it cannot be modified."
            android:textSize="14dp"
            android:alpha="0.9"/>


        <Spinner
            android:id="@+id/ExerciseNameSpinner"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DialogNotice" />

        <TextView
            android:id="@+id/PlanTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/TimeEditView"
            app:layout_constraintTop_toTopOf="@id/TimeEditView"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="Plantime : "/>

        <TextView
            android:id="@+id/DoneTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/TimeEditView"
            app:layout_constraintTop_toTopOf="@id/TimeEditView"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="DoneTime : "/>

        <EditText
            android:id="@+id/TimeEditView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="20"
            android:textSize="16sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ExerciseNameSpinner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/TimeEditView"
            app:layout_constraintTop_toTopOf="@id/TimeEditView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="min"/>

        <Button
            android:id="@+id/okButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/main"
            android:background="@drawable/round_log"
            android:padding="0dp"
            android:text="Confirm"
            android:textSize="12sp"
            android:textColor="@color/lessblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/main"
            android:text="Cancel"
            android:background="@drawable/round_log"
            android:textSize="12sp"
            android:textColor="@color/lessblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
