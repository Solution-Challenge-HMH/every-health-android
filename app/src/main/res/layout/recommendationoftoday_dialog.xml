<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="650dp"
    android:layout_gravity="center">

    <Button
        android:id="@+id/CloseButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/RecommendationOfTodayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="Today's Recommendation"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/trophyImageView"
        android:layout_width="277dp"
        android:layout_height="334dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/eclipsepic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RecommendationOfTodayTextView" />


    <ImageView
        android:id="@+id/eclipseImageView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:src="@drawable/trophybigpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RecommendationOfTodayTextView" />

    <TextView
        android:id="@+id/RecommendNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="Exercise Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/RecommendationOfTodayTextView"
        app:layout_constraintTop_toBottomOf="@id/eclipseImageView" />


    <TextView
        android:id="@+id/RecommendTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Recommended time :"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/RecommendNameTextView"
        app:layout_constraintTop_toBottomOf="@id/RecommendNameTextView" />

    <TextView
        android:id="@+id/RecommendTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/RecommendTimeTextView"
        app:layout_constraintTop_toBottomOf="@id/RecommendNameTextView" />

    <TextView
        android:id="@+id/RecommendDifficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Difficulty : "
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/RecommendNameTextView"
        app:layout_constraintTop_toBottomOf="@id/RecommendTimeTextView" />


    <TextView
        android:id="@+id/RecommendDifficultyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/RecommendDifficultyTextView"
        app:layout_constraintTop_toBottomOf="@id/RecommendTimeTextView" />

    <Button
        android:id="@+id/ToCalendarButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginRight="35dp"
        android:backgroundTint="@color/main"
        android:padding="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="40dp"
        android:text="Add to calendar"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ToRecommendationDialogButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="35dp"
        android:backgroundTint="@color/main"
        android:padding="0dp"
        android:text="Read more"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/ToCalendarButton"
        app:layout_constraintStart_toEndOf="@id/ToCalendarButton" />



</androidx.constraintlayout.widget.ConstraintLayout>