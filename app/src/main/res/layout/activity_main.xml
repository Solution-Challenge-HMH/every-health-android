<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAEAEA">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:background="@color/main"
        app:menu="@menu/top_nav"
        android:id="@+id/toolbar">

    </androidx.appcompat.widget.Toolbar>


    <!-- FrameLayout 추가 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 버튼들을 감싸는 LinearLayout 추가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/ToPERlistButton"
                android:layout_width="330dp"
                android:layout_height="90dp"
                android:drawableRight="@drawable/heartratepic"
                android:background="@drawable/slidingcustom"
                android:layout_gravity="center"
                android:text="Exercises
                Recommended for You"
                android:paddingEnd="20dp"
                android:paddingLeft="25dp"
                android:textColor="@color/lessblack"
                android:textSize="17dp"

                android:backgroundTint="@color/white"
                />

            <android.widget.Button
                android:id="@+id/ToTodayERButton"
                android:layout_width="330dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:drawableRight="@drawable/trophypic"
                android:background="@drawable/slidingcustom"
                android:text="today's recommendation"
                android:layout_marginTop="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/lessblack"
                android:textSize="17dp"
                android:backgroundTint="@color/white"
                />

            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="330dp"
                android:layout_height="330dp">

                <!-- 캘린더 -->
                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="330dp"
                    app:mcv_selectionColor="@color/main"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_log" />

                <Button
                    android:id="@+id/ToCalendarButtonInMain"
                    android:layout_width="330dp"
                    android:layout_height="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="parent" />

            </FrameLayout>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>
